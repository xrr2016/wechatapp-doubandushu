.book{
    margin: 0;
    width: 100%;
    height: 100%;
    padding: 16px auto;
}
.book-title{
    font-weight: bold;
    font-size: 24px;
    color: #000;
    text-align:center; 
    padding-top: 12px;
}
.book-image{
    margin: 24px auto;
    border: 1px solid #fff;
}
.book-image image{
    display: block;
    width: 300px;
    margin: 0 auto;
}

.book-info{
    width: 100%;
    padding: 12px 12px;
}
.book-meta{
    margin:10px;
}

.book-intro{
    width: 80%;
    font-size: 20px;
    font-weight: bold;
    margin:24px auto;
}
.sumary{
    font-size: 14px;
    font-family: Georgia, 'Times New Roman', Times, serif;
    letter-spacing: 1px;
    word-spacing: 1px;
    font-weight: normal;
    text-align: left;
    line-height: 18px;
    text-indent: 2em;
    margin: 12px auto;
    display: block;
}